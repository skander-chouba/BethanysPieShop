    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Pie" asp-action="List" asp-route-category="@category.CategoryName" class="dropdown-item">@category.CategoryName</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Pie" asp-action="List" class="dropdown-item">View all pies</a>
        </li>
        
    </ul>
