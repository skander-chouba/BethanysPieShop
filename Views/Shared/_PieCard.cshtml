@model Pie
<div class="col-4">
    <div class="card">
        <img class="card-img-top" src="@Model.ImageThumbnailUrl" alt="Card image cap">
        <div class="card-body caption-full">
            <h5><a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a></h5>

            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <p class="card-text">@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-PieId="@Model.PieId">Add to cart</a>
            </p>
        </div>
    </div>
</div>