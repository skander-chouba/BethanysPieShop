
@model Pie

    <div class="col-9 row" >
        <h2>@Model.Name</h2>
        <div class="card">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
            <div class="caption-full">
                <h3 class="float-right">@Model.Price.ToString("c")</h3>
                <h3><a href="#">@Model.Name</a></h3>

                <h4>@Model.ShortDescription</h4>
                <p>@Model.LongDescription</p>
                <div class="addToCart">
                    <p class="button">
                        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-PieId="@Model.PieId">Add to cart</a>
                    </p>
                </div>
            </div>
        </div>
    </div>